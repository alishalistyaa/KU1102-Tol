        keep_ratio: False

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "Toggle"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1

    Button:
        text:"Click here"
        on_press: root.on_button_click()
        disabled: not root.count_enabled

    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "88dp"

    Switch:
        id: myswitchies
        on_active: root.on_switch_active(self)

    Slider:
        disabled: not myswitchies.active
        id : myslider
        min: 0
        max: 5
        value: 3
        on_value: root.onslidervalue(self)
    
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(myslider.value)
        ProgressBar:
            max:100
            velue: myslider.value
    TextInput:
        id: mytextinput
        size_hint: None, 1
        width: "100dp"
        text: "test"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "your name is" + root.text_input_str

        

