<ImagesExample@GridLayout>:
    cols: 3
    Image :
        source: "photos/cake.jpg"
    Image :
        source: "photos/walking.gif"
        allow_stretch: False
        size_hint: None,0.01
    Image :
        source: "photos/cake.jpg"
